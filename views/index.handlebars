<h1>Burgers!</h1>

<h2>Burgers That Have Not Been Eaten!</h2>

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
      	<form action="burgers/update/{{this.id}}?_method=PUT" method="POST">{{this.burger_name}}</form>
      	<button id={{this.id}} class="change-devoured">Eat</button>
      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers That Have Been Eaten!</h2>

<ul>
  {{#each burgers}}
    {{!-- {{#if this.devoured}} --}}
	  <li>
      	{{this.burger_name}}
      	
      </li>
    {{!-- {{/if}} --}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bu">Burger Name:</label>
    <input type="text" id="bu" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>

